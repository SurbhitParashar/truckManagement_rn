{
  "expo": {
    "name": "truckManagement_rn",
    "slug": "truckManagement_rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "plugins": [
      "expo-dev-client"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,    
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to the ELD device.",
        "NSBluetoothPeripheralUsageDescription": "Needed to discover and connect to the ELD device.",
        "NSLocationWhenInUseUsageDescription": "Location is required to scan for Bluetooth devices on iOS."
      },
  
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.surbhit.truckManagement_rn"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "92d71dad-a0ae-478c-ab1d-82a0346ecd32"
      }
    }
  }
  }}
